<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9e2"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".send_finished_content"
    tools:showIn="@layout/app_bar_send_finished"
    android:padding="20dp"
    android:layoutDirection="rtl">

    <ImageView
        android:paddingTop="20dp"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/check" />

    <TextView
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_margin="40dp"
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تم إرسال طلبك بنجاح" />

    <LinearLayout
        android:padding="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="كود الطرد :  " />

        <TextView
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1236644789 " />




    </LinearLayout>

    <TextView
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="يمكنك تتبع الطرد من خلال هذا الكود " />
    <Button
        android:onClick="track_post"
        android:id="@+id/button4"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape"
        android:text="تتبع الطرد"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>