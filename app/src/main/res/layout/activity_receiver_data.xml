<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Receiver_data"
    android:background="#fff9e2"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"


        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEFD5"
            android:gravity="center"
            android:padding="10dp"
            android:text="بيانات المستلم"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"



        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="اسم المستلم "
            android:textStyle="bold"
            android:textColor="#918F8F"
            android:textSize="20dp" />

        <EditText
            android:textDirection="rtl"

            android:id="@+id/receiver_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorLink="#ffc606" />
    </LinearLayout>




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:padding="3dp"

        >

        <TextView


            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="bold"
            android:text="رقم الهاتف "
            android:textColor="#918F8F"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/receiver_phone_et"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:textColorLink="#ffc606" />

    </LinearLayout>








    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_marginBottom="40dp"
        android:background="#FFEFD5"

        android:padding="2dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_granted"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/location"
            android:onClick="maps"

            android:padding="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:paddingRight="2dp"
                android:textStyle="bold"
                android:text="عنوان المستلم "
                android:textColor="#918F8F"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:paddingRight="2dp"
                android:text="صنعاء, حده "
                android:textColor="#4B4A4A"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:onClick="show_details"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/left"
        android:text="التالي"
        android:textSize="20sp"
        android:textStyle="bold" />



</LinearLayout>