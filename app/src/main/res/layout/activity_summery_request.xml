<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".summery_request"
    android:background="#fff9e2"
    android:orientation="vertical"
    android:padding="10dp"
    android:textDirection="rtl">

    <LinearLayout


        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"


        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEFD5"
            android:gravity="center"
            android:padding="10dp"
            android:text="تأكيد الطلب"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/flat_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView8"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حجم الطرد"
                android:textColor="#ffc606"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"

                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="صغير"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@drawable/flat_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/package_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نوع الطرد "
                android:textColor="#ffc606"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/package_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:text="مستندات \n"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/flat_selector"

        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:gravity="right"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وصف الطرد"
                android:textColor="#ffc606"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="16dp" />


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:background="@drawable/flat_selector"

        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:gravity="right"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بيانات المستقبل"
                android:textColor="#ffc606"
                android:textSize="18dp"
                />

            <TextView
                android:drawableRight="@drawable/user"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:id="@+id/receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إحسان" />
            <TextView
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:id="@+id/receiver_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/phone"
                android:text="77777777" />
            <TextView
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:id="@+id/rec_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/re_location"
                android:text="صنعاء,حده" />
        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:background="@drawable/flat_selector"

        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <LinearLayout

            android:gravity="right"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mony"
                android:text="السعر الإجمالي"
                android:textColor="#ffc606"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:textDirection="rtl"
                android:layoutDirection="rtl"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="right"
                android:orientation="horizontal">



                <TextView


                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="5000"
                    android:textColor="#000"
                    android:textSize="16dp" />
                <TextView
                    android:layout_marginRight="7dp"
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ريال يمني"
                    android:textColor="#000"
                    android:textSize="16dp" />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button


            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/shape"
            android:onClick="confirm"
            android:text="تأكيد"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button

            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="70dp"
            android:background="@drawable/shape"
            android:onClick="confirm"
            android:text="إلغاء"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>