<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9e2"
    android:orientation="vertical"
    android:padding="20dp"
    android:textDirection="ltr"
    tools:context=".package_data">

    <LinearLayout

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"


        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEFD5"
            android:gravity="center"
            android:padding="10dp"
            android:text="بيانات الطرد"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="3dp"

        >

        <TextView


            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="نوع الطرد "
            android:textColor="#918F8F"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout

        android:layoutDirection="ltr"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RadioButton
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/flat_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:drawableBottom="@drawable/post"
                android:gravity="center"
                android:paddingLeft="40dp"
                android:paddingTop="3dp"
                android:paddingRight="40dp"
                android:paddingBottom="3dp"
                android:text="شحنة"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold"

                />







            <RadioButton

                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:drawableBottom="@drawable/book"
                android:linksClickable="true"
                android:id="@+id/document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:checked="true"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="مستندات"
                android:background="@drawable/flat_selector"

                android:textColor="#000" />


        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D1CDCD"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:padding="3dp"

        >

        <TextView


            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"

            android:text="حجم الطرد "
            android:textColor="#918F8F"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layoutDirection="ltr"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >

        <RadioGroup
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            >

            <RadioButton
                android:id="@+id/big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="6dp"
                android:background="@drawable/flat_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text="كبير \n500-800g"
                android:textColor="#000"
                android:textSize="15dp"

                android:textStyle="bold"

                />


            <RadioButton
                android:id="@+id/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/flat_selector"

                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text=" متوسط\n200-500g"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"

                />
            <RadioButton
                android:id="@+id/small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/flat_selector"

                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text=" صغير\n100-200g"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"

                />





        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D1CDCD"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:orientation="vertical"
        android:padding="3dp"

        >

        <TextView

            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="وصف الطرد "
            android:textColor="#918F8F"
            android:textSize="20dp" />

        <EditText

            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:id="@+id/desc_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:ems="10"

            android:inputType="textPersonName"
            android:textColorLink="#ffc606" />

    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:onClick="receiver_data"
        android:drawableLeft="@drawable/left"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:text="التالي"
        android:textSize="20sp"
        android:textStyle="bold"/>


</LinearLayout>