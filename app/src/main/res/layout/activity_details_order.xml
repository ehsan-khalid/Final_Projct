<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="#fff9e2"
   android:padding="20dp"
    android:textDirection="rtl"
    tools:context=".details_order"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAF4DF"
        android:orientation="vertical"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FAF4DF"
        >

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingRight="5dp"
            android:text="كود الطرد : "
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView233"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingRight="5dp"
            android:text="9999999999999999999 "
            android:textColor="#000"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#A39E9E"
        android:orientation="horizontal" />

    <LinearLayout
        android:paddingRight="5dp"
        android:background="#FAF4DF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الى :"
            android:textStyle="bold"
            android:textSize="20dp"
          />
        <TextView
            android:layout_gravity="right"
            android:gravity="center"
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خالد عبدالله زيد "
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="2dp"

            android:drawableRight="@drawable/ic_person_black_24dp"
        />


        <TextView
            android:drawableRight="@drawable/ic_phone_black_24dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="77777 "
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="2dp"

            />
        <TextView
            android:drawableRight="@drawable/ic_location_on_black_24dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="صنعاء,حدة "
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="2dp"
        />




    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A39E9E"
        android:orientation="horizontal"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAF4DF"
        android:orientation="vertical"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/textView35"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="من : "
            android:textSize="20dp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:drawableRight="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="تعز,المدينة "
            android:textColor="#000"
            android:textSize="15dp" />




        </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A39E9E"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAF4DF"
        android:orientation="vertical"
        android:paddingRight="5dp"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/textView37"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="حالة الطرد : "
            android:textSize="20dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/ic_check_circle_black_24dp" />

            <TextView

                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="تم تسليم الطرد "
                android:textColor="#000"
                android:textSize="15dp" />

        </LinearLayout>





    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A39E9E"
        android:orientation="horizontal">
        >

    </LinearLayout>

</LinearLayout>